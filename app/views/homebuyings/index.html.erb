<h1>Homebuying Clients</h1>

<div class="form-group pull-right">
    <input type="text" class="search form-control" placeholder="What you looking for?">
</div>
<span class="counter pull-right"></span>
<table class="table table-hover table-bordered results">
  <thead>
     <th >ID</th>
     <th class="col-md-5 col-xs-5">Name</th>
     <th class="col-md-3 col-xs-3">Home Phone</th>
     <th class="col-md-3 col-xs-3">Address</th>
     <th class="col-md-3 col-xs-3">Contact for Appointment</th>
     <th class="col-md-3 col-xs-3">Realtor's Name</th>
     <th >View</th> 
   </tr>    
   <tr class="warning no-result">
      <td colspan="4"><i class="fa fa-warning"></i> No result</td>
    </tr>
  </thead>
<% @homebuyings.each do |homebuying| %>
 <tbody>
   <tr>
     <td><%= homebuying.client.id %></td>
     <td><%= homebuying.client.full_name.titleize %></td>
     <td><%= homebuying.client.home_phone %></td>
     <td><%= homebuying.client.address %>, <%= homebuying.client.city %>, <%= homebuying.client.state %></td>
     <td><% if homebuying.contact_for_appointment== false %>
        <%= "No" %>
        <% else %>
        <%= "Yes" %>
        <% end %>
     </td>
     <td><%= homebuying.realtor_name %></td>
     <td>
       <%= link_to "View", client_path(homebuying.client.id), class: "btn btn-default" %>
     </td>
   </tr>
 </tbody>
<% end %>
</table>


