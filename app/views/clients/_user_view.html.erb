
<div class="row" style="margin-bottom:0;">
  <div class="col-md-8">
    <h1>
      Client profile for: <strong class="text-primary"> <%= @client.full_name %> </strong> <br>
        <% if @client.user_id %>
        <small>
          Assigned Employee: <strong class="text-success"> <%= @client.user.full_name %> </strong>
        </small>
        <% elsif !@client.incomplete_profile? %>
          <div class="row" style="padding-top:10px;margin-bottom:0;">
            <%= form_tag("/clients/#{@client.id}/assign", method: :patch) do %>
              <div class="col-md-4" style="margin-top:2px;">
                <%= collection_select(:client, :user_id, User.all, :id, :full_name, {:prompt => 'Select a Counselor'}, :class => "form-control input-sm") %>
              </div>
              <div class="col-md-8">
                <%= hidden_field_tag :client_id, @client.id %>
                <%= submit_tag "Assign", :class => "btn btn-sm btn-success" %>
              </div>
            <% end %>
              </div>
        <%else%>
          <small class="text-danger">Profile not complete.</small>
        <% end %>
    </h1>
  </div>
  <div class="col-md-4">
    <div class="text-right">
      <% if @client.client_applications.length > 0 %>
        <h5>Submitted Applications</h5>
        <% @client.client_applications.each do |application| %>
          <%= link_to "#{application.class.to_s}", "/#{application.class.to_s.downcase}s/#{application.id}", :class => "btn btn-success btn-sm" %>
        <% end %>
      <% end %>
<%= link_to "Budget", "/budgets/#{@client.budget.id}", :class => "btn btn-success btn-sm" %>

    </div>
</div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Contact Information</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>Client Name:</td>
              <td class="text-right"><strong><%= @client.full_name %></strong></td>
            </tr>
            <tr>
              <td>Home Phone:</td>
              <td class="text-right"><strong><%= @client.home_phone %></strong></td>
            </tr>
            <tr>
              <td>Cell Phone:</td>
              <td class="text-right"><strong><%= @client.cell_phone %></strong></td>
            </tr>
            <tr>
              <td>Work Phone:</td>
              <td class="text-right"><strong><%= @client.work_phone %></strong></td>
            </tr>
            <tr>
              <td>Address:</td>
              <td class="text-right">
                <strong>
                  <%= @client.address %>
                  <%= @client.city %>,
                  <%= @client.state %>
                  <%= @client.zip_code %>
                </strong>
              </td>
            </tr>
            <tr>
              <td>Ward:</td>
              <td class="text-right"><strong><%= @client.ward %></strong></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Demographics</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
            <tr>
              <td>Race:</td>
              <td class="text-right"><strong><%= @client.race %></strong></td>
            </tr>
            <tr>
              <td>Sex:</td>
              <td class="text-right"><strong><%= @client.sex %></strong></td>
            </tr>
            <tr>
              <td>Education Level:</td>
              <td class="text-right"><strong><%= @client.education_level %></strong></td>
            </tr>
            <tr>
              <td>Marital Status:</td>
              <td class="text-right"><strong><%= @client.marital_status %></strong></td>
            </tr>
            <tr>
              <td>Date of Birth:</td>
              <td class="text-right">
                <strong>
                  <% if @client.dob %>
                    <%= @client.dob.strftime("%m/%d/%Y") %>
                  <% end %>
                </strong>
              </td>
            </tr>
            <tr>
              <td>SSN:</td>
              <td class="text-right">
                <strong>
                  <% if @client.ssn %>
                    *********
                  <% end %>
                </strong>
              </td>
            </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Household Information</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <tr>
            <td>Head of Household:</td>
            <td class="text-right">
              <strong>
                <%= @client.head_of_household ? "Yes" : "No" %>
              </strong>
            </td>
          </tr>
          <tr>
            <td>Number in Household:</td>
            <td class="text-right"><strong><%= @client.num_in_household %></strong></td>
          </tr>
          <tr>
            <td>Number of Dependents:</td>
            <td class="text-right"><strong><%= @client.num_of_dependants %></strong></td>
          </tr>
          <tr>
            <td>Estimated Household Income:</td>
            <td class="text-right"><strong><%= @client.estimated_household_income %></strong></td>
          </tr>
          <tr>
            <td>Disability:</td>
            <td class="text-right"><strong><%= @client.disability ? "Yes" : "No" %></strong></td>
          </tr>
          <tr>
            <td>Military Service Member:</td>
            <td class="text-right"><strong><%= @client.military_service_member ? "Yes" : "No" %></strong></td>
          </tr>
          <tr>
            <td>Volunteer:</td>
            <td class="text-right"><strong><%= @client.volunteer_interest ? "Yes" : "No" %></strong></td>
          </tr>
          <tr>
            <td>Union Member:</td>
            <td class="text-right"><strong><%= @client.union_member ? "Yes" : "No" %></strong></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Notes</h3>
      </div>
      <div class="panel-body">

        <%= form_tag "/clients/#{@client.id}", method: :post do %>
          <div class="form-group">
            <%= label_tag :Add_Note %>
            <%= text_area_tag :description, nil, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Submit Note", :class=>"btn btn-sm btn-primary" %>
          </div>
        <% end %>

        <table class="table table-hover">
          <tr>
            <th>Note</th>
            <th>Time</th>
            <th colspan="2">Action</th>
          </tr>
          <% @client.notes.each do |note| %>
          <tr>
            <td><%= note.description %></td>
            <td><%= note.pretty_time %></td>
            <td>
              <%= link_to "edit", notes_edit_path(note.id), :class=>"btn btn-sm btn-warning" %>
            </td>
            <td>
              <%= button_to "delete", client_path(:id => note.id), :method => :delete, :class=>"btn btn-sm btn-danger" %>
            </td>
          </tr>
          <% end %>
        </table>

      </div>
    </div>
  </div>
</div>








