                    <h2 class="section-heading"><%= I18n.t ".splash.demographics" %> 
                    <p class="lead"><%= I18n.t ".splash.demographics_statement" %> </p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag "housing.jpg", :class => "img-responsive" %>
                </div>
            </div>

        </div>
