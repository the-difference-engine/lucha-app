</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand topnav" href="#">LUCHA</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                        Language: 
                        <%= link_to_unless_current "English", locale: "en" %>|
                        <%=  link_to_unless_current "EspaÃ±ol", locale: "es" %>
                    <li>
                        <% if client_signed_in? %>
                        <% else %> 
                            <a href="/users/sign_in"><%= I18n.t "splash.user_sign_in" %></a>
                        <% end %>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
            <% flash.each do |name, message| %>
                <div class="alert alert-<%= name == "alrert" || name == "notice" ? "warning" : name %> alert-dismissible" role="alert">  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p> <%= message %> </p> 
                </div>
            <% end %>
        <!-- /.container -->
    </nav>


    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1><%= I18n.t ".splash.title" %></h1>
                        <h3><%= I18n.t ".splash.sub_title" %></h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <% if current_client %>
                                <li><a href="/clients/<%= current_client.id %>" class="btn btn-default btn-lg"><span class="network-name">View my profile</span></a></li>
                                <li><a href="/clients/sign_out" data-method="delete" class="btn btn-default btn-lg"><span class="network-name">Sign Out</span></a></li>
                            <% elsif current_user %>
                                <li><a href="/users" class="btn btn-default btn-lg"><span class="network-name">View your clients</span></a></li>
                                <li><a href="/users/sign_out" data-method="delete"  class="btn btn-default btn-lg"><span class="network-name">Sign out</span></a></li>
                            <% else %>
                                <li><a href="/register" class="btn btn-default btn-lg"> <span class="network-name"><%= I18n.t ".splash.sign_up" %></span></a></li>
                                <li><a href="/login" class="btn btn-default btn-lg"><span class="network-name"><%= I18n.t ".splash.sign_in" %></span></a></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.intro-header -->
    <!-- Page Content -->
	<a  name="services"></a>
    <div class="content-section-a">
