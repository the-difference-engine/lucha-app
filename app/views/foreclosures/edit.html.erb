<h1>Update your foreclosure case:</h1>
<hr>
<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Foreclosure Information</h3>
  </div>
  <div class="panel-body">
    <%= form_tag "/foreclosures/#{@foreclosure.id}", method: :patch do %>
      <%= render "form" %>
    <hr>
    <div class="form-group">
      <%= submit_tag "Update", :class => 'btn btn-large btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
